<hibernate-configuration>
    <session-factory>
        <!-- DB settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/mantis_test?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- ENTITY CLASSES -->
        <mapping class="com.example.orm.entity.User"/>
        <mapping class="com.example.orm.entity.UserProfile"/>
        <mapping class="com.example.orm.entity.Project"/>
        <mapping class="com.example.orm.entity.Issue"/>
    </session-factory>
</hibernate-configuration>
